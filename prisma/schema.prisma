generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Education {
  id          Int         @id @default(autoincrement())
  user        User        @relation(fields: [userId], references: [id])
  userId      Int
  name        String
  title       String
  school      String
  location    String
}

model Job {
  id          Int         @id @default(autoincrement())
  user        User        @relation(fields: [userId], references: [id])
  userId      Int
  name        String
  title       String
  description String
  skills      String
  projects    String
  start       DateTime
  end         DateTime?
}

model Link {
  id          Int       @id @default(autoincrement())
  type        LinkType    
  text        String
  href        String
}

enum LinkType {
  EMAIL
  INSTAGRAM
  LINKEDIN
}

model User {
  id          Int         @id @default(autoincrement())
  email       String      @unique
  name        String?
  password    String
  jobs        Job[]
  education   Education[]
  createdAt   DateTime    @default(now())
}